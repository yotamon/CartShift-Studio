rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    // For development: Allow authenticated users full access
    // TODO: Tighten these rules for production

    // Portal Users - users can read/write their own data
    match /portal_users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isAuthenticated() && request.auth.uid == userId;
    }

    // Organizations - authenticated users can read/create
    match /portal_organizations/{orgId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated();
    }

    // Organization Members
    match /portal_members/{memberId} {
      allow read, write: if isAuthenticated();
    }

    // Invites
    match /portal_invites/{inviteId} {
      allow read, write: if isAuthenticated();
    }

    // Requests
    match /portal_requests/{requestId} {
      allow read, write: if isAuthenticated();
    }

    // Comments
    match /portal_comments/{commentId} {
      allow read, write: if isAuthenticated();
    }

    // Files
    match /portal_files/{fileId} {
      allow read, write: if isAuthenticated();
    }

    // Notifications
    match /portal_notifications/{notificationId} {
      allow read, write: if isAuthenticated();
    }

    // Activity Logs
    match /portal_activity/{logId} {
      allow read, write: if isAuthenticated();
    }
  }
}
