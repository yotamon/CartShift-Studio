{
  "name": "cartshift-studio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "prebuild": "node scripts/merge-translations.js",
    "predev": "node scripts/merge-translations.js",
    "dev": "next dev --turbo",
    "dev:force": "powershell -ExecutionPolicy Bypass -File scripts/dev-force-simple.ps1",
    "dev:force:win": "cmd /c scripts\\dev-force.bat",
    "build": "next build",
    "export": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "deploy": "pnpm run build && firebase deploy",
    "deploy:hosting": "pnpm run export && firebase deploy --only hosting",
    "deploy:functions": "cd functions && pnpm install && cd .. && firebase deploy --only functions",
    "analyze": "ANALYZE=true next build",
    "normalize-db": "tsx scripts/normalize-db.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "i18n:split": "node scripts/split-translations.js",
    "i18n:merge": "node scripts/merge-translations.js"
  },
