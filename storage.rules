rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    function isAuthenticated() {
      return request.auth != null;
    }

    function getUserId() {
      return request.auth.uid;
    }

    function isAgencyUser() {
      return isAuthenticated() &&
             firestore.exists(/databases/(default)/documents/portal_users/$(getUserId())) &&
             (
               firestore.get(/databases/(default)/documents/portal_users/$(getUserId())).data.get('isAgency', false) == true ||
               firestore.get(/databases/(default)/documents/portal_users/$(getUserId())).data.get('accountType', '') == 'AGENCY'
             );
    }

    function isOrgMember(orgId) {
      return isAuthenticated() && (
        isAgencyUser() ||
        firestore.exists(/databases/(default)/documents/portal_organizations/$(orgId)) &&
        firestore.get(/databases/(default)/documents/portal_organizations/$(orgId)).data.get('createdBy', '') == getUserId() ||
        firestore.exists(/databases/(default)/documents/portal_members/$(orgId + '_' + getUserId()))
      );
    }

    function canAdminOrg(orgId) {
      return isAuthenticated() && (
        isAgencyUser() ||
        (firestore.exists(/databases/(default)/documents/portal_organizations/$(orgId)) &&
         firestore.get(/databases/(default)/documents/portal_organizations/$(orgId)).data.get('createdBy', '') == getUserId()) ||
        (firestore.exists(/databases/(default)/documents/portal_members/$(orgId + '_' + getUserId())) && (
          firestore.get(/databases/(default)/documents/portal_members/$(orgId + '_' + getUserId())).data.get('role', '') == 'owner' ||
          firestore.get(/databases/(default)/documents/portal_members/$(orgId + '_' + getUserId())).data.get('role', '') == 'admin'
        ))
      );
    }

    // Portal files
    match /portal/{orgId}/{allPaths=**} {
      allow read: if isOrgMember(orgId);
      allow create, update: if isOrgMember(orgId)
                   && request.resource.size < 50 * 1024 * 1024;
      allow delete: if isOrgMember(orgId);
    }

    // User avatars/profile pictures
    match /avatars/{userId}/{allPaths=**} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated() && getUserId() == userId
                   && request.resource.size < 2 * 1024 * 1024
                   && request.resource.contentType.matches('image/.*');
      allow delete: if isAuthenticated() && getUserId() == userId;
    }

    // Organization logos/thumbnails - PUBLIC READ for UI display
    match /org-logos/{orgId}/{allPaths=**} {
      // Public read access - essential for displaying logos
      allow read: if true;

      // Only org admins can upload logos
      allow create, update: if canAdminOrg(orgId) &&
        request.resource.size < 2 * 1024 * 1024 &&
        request.resource.contentType.matches('image/.*');

      // Delete still requires admin
      allow delete: if canAdminOrg(orgId);
    }
  }
}
